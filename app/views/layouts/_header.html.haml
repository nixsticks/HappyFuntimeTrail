%nav{class: "navbar navbar-default", role:"navigation"}
	%div{class: "navbar-header"}
		%button{type: "button", class: "navbar-toggle", data:{toggle: "collapse", target:"#navbar"}}
			%span{class: "sr-only"}
			%span Menu
		%a{class: "navbar-brand", href: "/"} Home

	%div{class: "collapse navbar-collapse", id: "navbar"}
		%ul{class: "nav navbar-nav"}
			%li= link_to "About", about_path
			%li= link_to "Instructions", help_path
			%li= link_to "Trailmakers", users_path
		%ul{class: "nav navbar-nav navbar-right"}
			-if signed_in?
				%li{class: "dropdown"}
					%a{href: "#{link_to current_user.username, current_user}", class: "dropdown-toggle", data:{toggle: "dropdown"}} #{current_user.username}
					%ul{class: "dropdown-menu"}
						%li= link_to "Profile", current_user
						%li= link_to "Sign out", signout_path, method: "delete"
			-else
				%li= link_to "Sign in", signin_path
				%li= link_to "Sign up", signup_path

- if flash[:success]
	%p{class: "alert alert-success"}= flash[:success]
- elsif flash[:error]
	%p{class: "alert alert-danger"}= flash[:error]