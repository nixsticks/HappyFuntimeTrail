%nav{class: "navbar navbar-default", role:"navigation"}
	%div{class: "navbar-header"}
		%button{type: "button", class: "navbar-toggle", data:{toggle: "collapse", target:"#bs-navbar"}}
			%span{class: "sr-only"}
			%span Menu

	%div{class: "collapse navbar-collapse", id: "bs-navbar"}
		%ul{class: "nav navbar-nav"}
			%li= link_to "Home", root_path 
			
		%ul{class: "nav navbar-nav navbar-right"}
			-if signed_in?
				%li= link_to "Users", users_path
				%ul{class: "nav navbar-nav navbar-right"}
					%li{class: "dropdown"}
						= link_to(current_user.username, current_user, class: "dropdown-toggle", data:{toggle:"dropdown"})
						%ul{class: "dropdown-menu"}
							%li= link_to "Profile", current_user
							%li= link_to "Sign out", signout_path, method: "delete"
			-else
				%li= link_to "Sign in", signin_path
				%li= link_to "Sign up", signup_path

- if flash[:success]
	%p{class: "success"}= flash[:success]
- elsif flash[:error]
	%p{class: "error"}= flash[:error]