= form_for @trail do |f|
  .form-group
    = f.label :name
    = f.text_field :name
  .form-group
    = f.label :length
    = f.number_field_tag 'Number of pins', nil, :in => 1...20
  .form_group
    = f.label :description
    = f.text_area :description
  / .form_group
  /   = f.hidden_field :creator_id, value: current_user.id, class: 'form-control'
  = f.submit


  - 4.times do
      .field
        = f.fields_for :todos, @todo_list.todos.build do |tf|
          = tf.text_field :name