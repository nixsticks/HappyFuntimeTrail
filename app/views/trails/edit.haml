= render 'shared/pins_div'

.row.map-container
  .center-panel.col-md-10.nogutter
    #map-canvas.large

  .right-panel.col-md-2.nogutter
    .right-container
      %h1 Edit Map
      .form
        = form_for @trail do |f|
          .field
            = f.label :name
            %br
            = f.text_field :name, class: "form-control"
          .field
            = f.label :description
            %br
            = f.text_area :description, class: "form-control"
          .button.inpanel
            = f.submit

= javascript_include_tag :trails