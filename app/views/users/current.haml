= render 'shared/pin_div'

-if flash[:error]
  %p{class: "error"}= flash[:error]
%h1 Target

#map-canvas

%h1 Current Position

%p
  Latitude:
  %span{id: "latitude"}
%p
  Longitude:
  %span{id: "longitude"}
%p
  Target latitude: #{@pin.latitude.round(4)}
%p
  Target longitude: #{@pin.longitude.round(4)}

= form_tag checkin_path, method: :post do
  %input{type: "hidden", id: "latitudeinput", name: "latitude"}
  %input{type: "hidden", id: "longitudeinput", name: "longitude"}
  %input{type: "submit", value: "Check in"} 
%button Abandon Hope

= javascript_include_tag params[:controller]
= javascript_include_tag :pin