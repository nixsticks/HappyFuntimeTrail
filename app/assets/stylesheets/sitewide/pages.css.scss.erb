.right-panel {
  height: 100%;
  background-color: $darkBlue;
  color: white;
  overflow-x: hidden;
  overflow-y: auto;
  border-left: 1px solid $darkestBlue;
}

.float-panel {
  position: fixed;
  top: 0;
  right: 0;
  background-color: $darkBlue;
  color: white;
  overflow-x: hidden;
  overflow-y: auto;
  border: 1px solid $darkestBlue;
  @include border-radius-bottom(5px);
  z-index:1;
}

.right-container {
  padding: 15px 15px 0 15px;
}

.float-container {
  padding: 0 30px 15px 15px;
  a {
    color: white;
    text-decoration: none;
  }
  overflow-y: auto;
  // z-index: 1000;
}

.media {
  overflow-y: auto;
}

.right-container form {
  input, textarea {
    @include form(30px);
    @include border-radius(2px);
    border: 0;
  }

  .form-group {
    margin: 10px 0;
  }

  label {
    font-weight: bold;
  }
}

ol.panels {
  list-style: none;
  margin: 10px 0;
  padding: 0;
  li {
    padding: 10px;
    background-color: white;
    color: $darkBlue;
    border: 2px solid $darkBlue;
    @include border-radius(5px);
    text-align: center;
  }
  cursor: pointer;
}

.button.bottom {
  position: fixed;
  bottom: 25px;
  left: 50%;
  margin-left: -100px;
  z-index: 0.5;
  a, input {
    @include button-block;
    @include button;
    font-size: 1.5em;
    min-width: 200px;
  }

  a:hover, input:hover {
    @include button-hover;
  }
}

.button.inpanel a, .button.inpanel input {
  @include button-block;
  @include button;
  font-size: 1em;
  min-width: 156px;
}

.button.inpanel a:hover, .button.inpanel input:hover {
  @include button-hover;
}

.button.inpanel.inverse {
  a, input {
    @include button-block;
    @include button-inverse;
    font-size: 1em;
    min-width: 156px;
  }

  a:hover, input:hover {
    @include button-hover-inverse;
  }
}

.button.inpanel a:hover, .button.inpanel input:hover {
  @include button-hover;
}

.button.inpanel.small input {
  width: auto;
}

