
//colors
$lightYellow: #E8DDCB;
$darkYellow: #CDB380;
$darkGreen: #036564;
$darkBlue: #033649;
$darkestBlue: rgb(5, 17, 40);

@import url(http://fonts.googleapis.com/css?family=Overlock:400,700,900,400italic,700italic,900italic);

@mixin border-radius($radius) {
  -webkit-border-radius: $radius;
     -moz-border-radius: $radius;
      -ms-border-radius: $radius;
          border-radius: $radius;
}
@mixin border-radius-bottom($radius) {
  -webkit-border-radius: 0 0 $radius $radius;
     -moz-border-radius: 0 0 $radius $radius;
      -ms-border-radius: 0 0 $radius $radius;
          border-radius: 0 0 $radius $radius;
}

@mixin button-block {
  display: inline-block;
  padding: 10px;
  font-weight: bold;
  text-align: center;
  text-decoration: none;
  @include border-radius(5px);
}

@mixin button {
  color: $darkBlue;
  background-color: white;
  border: 2px solid $darkBlue;
}

@mixin button-inverse {
  color: white;
  background-color: $darkBlue;
  border: 2px solid white;
}

@mixin button-hover {
  color: white;
  background-color: $darkBlue;
  border: 2px solid white;
}

@mixin button-hover-inverse {
  color: $darkBlue;
  background-color: white;
  border: 2px solid $darkBlue;
}

@mixin header-shadow {
  -webkit-box-shadow: 0px 4px 10px 0px rgba(100, 100, 100, 0.75);
   -moz-box-shadow: 0px 4px 10px 0px rgba(100, 100, 100, 0.75);
        box-shadow: 0px 4px 10px 0px rgba(100, 100, 100, 0.75);
}

@mixin section-shadow {
  -webkit-box-shadow: 0px -7px 5px 0px rgba(50, 50, 50, 0.75);
     -moz-box-shadow: 0px -7px 5px 0px rgba(50, 50, 50, 0.75);
          box-shadow: 0px -7px 5px 0px rgba(50, 50, 50, 0.75);
} 

@mixin form($height) {
  margin-top: 5px;
  margin-bottom: 5px;
  min-height: $height;
  width: 100%;
  padding: 5px;
  color: $darkBlue;
}

